{
  "manifest_version": 3,
  "name": "SuperpoweredCV Profile Grabber",
  "version": "1.0",
  "description": "Scrape LinkedIn profiles for SuperpoweredCV analysis.",
  "icons": {
    "48": "src/assets/icon.png",
    "128": "src/assets/icon.png"
  },
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "background": {
    "scripts": ["src/background/index.js"]
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": "src/assets/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/in/*",
        "https://www.linkedin.com/in/*/details/*",
        "https://www.linkedin.com/in/*/overlay/*"
      ],
      "js": ["src/content/index.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "superpoweredcv@imariana.com",
      "strict_min_version": "109.0"
    }
  }
}
